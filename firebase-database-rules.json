{
  "rules": {
    "users": {
      "$uid": {
        ".read": "auth != null",
        ".write": "auth != null && auth.uid == $uid"
      }
    },
    "recettes": {
      ".read": true,
      "$recetteId": {
        ".write": "auth != null"
      }
    },
    "shoppingList": {
      "$uid": {
        ".read": "auth != null && $uid === auth.uid",
        ".write": "auth != null && $uid === auth.uid"
      }
    },
    "feedback": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "preferences": {
      "$uid": {
        ".read": "auth != null && $uid === auth.uid",
        ".write": "auth != null && $uid === auth.uid"
      }
    },
    "reactions": {
      ".read": true,
      "$recetteId": {
        "$uid": {
          ".write": "auth != null && auth.uid == $uid"
        }
      }
    },
    "comments": {
      ".read": true,
      "$recetteId": {
        "$commentId": {
          ".write": "auth != null"
        }
      }
    },
    "follows": {
      "$followerId": {
        ".read": "auth != null",
        ".write": "auth != null && auth.uid == $followerId"
      }
    }
  }
}
